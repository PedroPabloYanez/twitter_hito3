<p id="notice"><%= notice %></p>
<div style="padding: 3px 10px; border: PowderBlue 5px solid; margin-top:20px; border-radius: 20px; padding: 30px; max-width: 540px">
    <p>
    <strong>User:</strong>
    <%= @tweet.user.user_name %>
        <img src="<%= @tweet.user.user_photo %>" width="100" height="100" style="margin: 10px 0" >
    </p>
    <p>
        <b>Tweets: </b><% @tweet.content.to_s.split(' ').each do |word| %>
                            <% if word.start_with?('#') %>
                                <%= link_to word, search_path(query: word) %>
                            <%else %>
                                <%= word %>
                            <%end %>
                        <% end %>
    </p>

    <p>
        <strong>Likes User:</strong>
        <% @tweet.likes.each do |user| %>
            <div>
                <li><img src="<%= user.user.user_photo%>" class="img-thumbnail rounded-circle" style="max-width: 55px;"></li>
                <%= user.user.user_name %>
            </div>
        <% end %>
    </p>
</div>
<br>
<%= button_to "Edit", edit_tweet_path(@tweet),  :class => "inbox-sf-add-btn tip", :method => :get %>
<br>
<%= button_to "Back", tweets_path,  :class => "inbox-sf-add-btn tip", :method => :get %>

